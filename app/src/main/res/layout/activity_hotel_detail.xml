<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_main"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/background_main"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">
                
                <!-- Parallax Banner -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_banner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
                
                <!-- Hotel Info Section (Inside Collapsing to scroll away) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_hotel_name_cn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="北京国贸大酒店"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_hotel_name_en"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="China World Summit Wing, Beijing"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cg_facilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="免费WiFi"
                            android:clickable="false"
                            app:chipBackgroundColor="@color/background_main"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游泳池"
                            android:clickable="false"
                            app:chipBackgroundColor="@color/background_main"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健身房"
                            android:clickable="false"
                            app:chipBackgroundColor="@color/background_main"/>
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="地址：北京市朝阳区建国门外大街1号"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:clickable="false"/>

                    <TextView
                        android:id="@+id/tv_open_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="开业时间：2010年"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                        
                    <TextView
                        android:id="@+id/tv_contact_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="联系电话：010-65052299"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- Sticky Date Bar (Outside Collapsing, but inside AppBarLayout) -->
        <!-- This will stick when scrolled up -->
        <LinearLayout
            android:id="@+id/layout_date_select"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/background_content"
            android:paddingHorizontal="16dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/history"
                app:tint="@color/app_primary_brown" />

            <TextView
                android:id="@+id/tv_date_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="05-01 至 05-02"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共 1 晚"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/right_arrow"
                android:layout_marginStart="4dp"
                app:tint="@color/text_secondary"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_room_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Fixed Header (Overlay) -->
    <RelativeLayout
        android:id="@+id/layout_fixed_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_main"
        android:elevation="8dp"
        android:paddingHorizontal="16dp"
        android:layout_gravity="top"> <!-- Fixed at top -->

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/text_primary"
            android:layout_centerVertical="true"
            android:contentDescription="Back"/>

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒店详情"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/btn_message"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/message"
            app:tint="@color/app_primary_brown"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Message"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>