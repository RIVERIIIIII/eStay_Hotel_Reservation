<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".activity.hotel.fragment.HotelSearchFragment">

    <!-- Top Banner (ViewPager2) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout Button (Top Right Overlay) -->
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        android:textSize="14sp"
        android:textColor="@color/app_primary_brown"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toTopOf="@id/card_space_time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp" />

    <!-- Card A: City and Date (Time-Space Card) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_space_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/background_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- City Section -->
            <LinearLayout
                android:id="@+id/layout_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/city_placeholder"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_on"
                    app:tint="@color/app_primary_brown"
                    android:contentDescription="定位" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginHorizontal="16dp"/>

            <!-- Date Section -->
            <LinearLayout
                android:id="@+id/layout_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_in_date"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_check_in_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-05-01"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_nights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/total_nights"
                    android:background="@drawable/bg_rounded_corner_top"
                    android:backgroundTint="@color/app_secondary_sand"
                    android:textColor="@color/text_primary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_out_date"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_check_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-05-02"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card B: Keyword and Filter (Intent Card) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/background_content"
        app:layout_constraintTop_toBottomOf="@id/card_space_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Keyword Search -->
            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_search_capsule"
                android:hint="位置 / 品牌 / 定位"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawableStart="@drawable/serach"
                android:drawablePadding="12dp"
                android:drawableTint="@color/app_primary_brown"
                android:maxLines="1"
                android:inputType="text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="12dp"/>

            <!-- Room & Guest Selection -->
            <LinearLayout
                android:id="@+id/layout_room_guest"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_search_capsule"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user"
                    app:tint="@color/app_primary_brown"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tv_room_guest_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1间 · 1成人 · 0儿童"
                    android:textSize="16sp"
                    android:textColor="#3E3232"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/right_arrow"
                    app:tint="@color/text_secondary"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="12dp"/>

            <!-- Filter Trigger -->
            <LinearLayout
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/star"
                    app:tint="@color/app_primary_brown"
                    android:layout_marginEnd="12dp"/>
                
                <TextView
                    android:id="@+id/tv_filter_trigger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="价格区间及星级筛选"
                    android:textSize="16sp"
                    android:textColor="#3E3232"/>
                    
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:tint="@color/app_primary_brown"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Quick Tags (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quick_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/card_intent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:padding="12dp"
        android:text="@string/search_button"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_primary_brown"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>